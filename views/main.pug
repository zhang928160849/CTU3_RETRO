block highlight
  section#highlight-section.site-section.testimonial-wrap(data-aos='fade')
    .container
      .row.mb-5
        .col-12.text-center
          h2.section-title.mb-3 HighLight 
    .slide-one-item.home-slider.owl-carousel
      each comment in comments
        div
          .testimonial
            blockquote.mb-5
              p
                | &ldquo;#{comment.commentD}&rdquo;
            figure.mb-4.d-flex.align-items-center.justify-content-center
              div
                img.w-50.img-fluid.mb-3(src=`images/${comment.username}.jpg` alt='Image')
              p #{comment.username}

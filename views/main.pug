block makecomment
  section#makecomment.site-section.bg-light(data-aos='fade')
    .container
      .row
        .col-md-12.mb-5
          form.p-5.bg-white(method='POST' action='/commentsubmit')
            h2.h4.text-black.mb-5 Write your comment
            .row.form-group
              .col-md-6.mb-3.mb-md-0
                label.text-black(for='fname') category
                select#category_sel.has-children.form-control(type='text' name='category')
                  option.form-control(type='text' name='username' value='good') good
                  option.form-control(type='text' name='username' value='bad') bad
                  option.form-control(type='text' name='username' value='mid') need improve
              .col-md-6
                label.text-black(for='fname') label
                select#label_sel.has-children.form-control(type='text' name='label')
                  option.form-control(type='text' name='username' ) quality
                  option.form-control(type='text' name='username') scurm
                  option.form-control(type='text' name='username') development
            .row.form-group
              .col-md-12
                label.text-black(for='message' name='commentD') comment
                textarea#message.form-control(name='message', cols='30', rows='7', placeholder='Write your notes or questions here...')
            .row.form-group
              .col-md-12
                input.btn.btn-primary.btn-md.text-white(type='submit', value='Commit')

